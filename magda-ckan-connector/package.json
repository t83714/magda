{
  "name": "@magda/ckan-connector",
  "description": "MAGDA CKAN Connector",
  "version": "0.0.51-0",
  "scripts": {
    "build": "yarn run compile",
    "compile": "yarn run compile-node && yarn run compile-browser",
    "compile-node": "tsc -p tsconfig-build.json",
    "compile-browser": "webpack --config src/webpack.config.js",
    "watch": "tsc -p tsconfig-build.json --watch",
    "start": "node dist/index.js",
    "dev": "run-typescript-in-nodemon src/index.ts",
    "test": "mocha --compilers ts:ts-node/register,tsx:ts-node/register --userId dummy --jwtSecret dummy --sourceUrl dummy --id test --name test-name --require tsconfig-paths/register \"src/test/**/*.spec.ts\"",
    "docker-build-local": "create-docker-context-for-node-component --build --push --tag auto --local",
    "docker-build-prod": "create-docker-context-for-node-component --build --push --tag auto",
    "retag-and-push": "retag-and-push"
  },
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@magda/scripts": "^0.0.51-0",
    "@types/express": "^4.0.37",
    "@types/node": "^8.0.14",
    "@types/read-pkg-up": "^3.0.1",
    "@types/request": "^2.0.0",
    "@types/urijs": "^1.15.34",
    "@types/yargs": "^6.6.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "isomorphic-fetch": "^2.2.1",
    "ts-loader": "^2.3.7",
    "typescript": "~2.5.0",
    "webpack": "^3.6.0"
  },
  "dependencies": {
    "@magda/registry-aspects": "^0.0.51-0",
    "@magda/typescript-common": "^0.0.51-0",
    "body-parser": "^1.18.1",
    "express": "^4.15.4",
    "moment": "^2.17.1",
    "read-pkg-up": "^3.0.0",
    "request": "^2.79.0",
    "urijs": "^1.18.12",
    "yargs": "^8.0.1"
  },
  "config": {
    "registryUrl": "http://localhost:6101/v0",
    "docker": {
      "name": "data61/magda-ckan-connector",
      "include": "node_modules aspect-templates dist Dockerfile package.json"
    },
    "jwtSecret": "squirrel",
    "userId": "00000000-0000-4000-8000-000000000000"
  },
  "magda": {
    "language": "typescript",
    "categories": {
      "connector": true
    }
  }
}
