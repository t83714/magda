{
  "name": "@magda/csv-connector",
  "description": "MAGDA Csv/Xlsx/Ods etc data catalog Connector",
  "version": "0.0.50-RC2",
  "scripts": {
    "build": "yarn run compile",
    "compile": "yarn run compile-node && yarn run compile-browser",
    "compile-node": "tsc -p tsconfig-build.json",
    "compile-browser": "webpack --config src/webpack.config.js",
    "watch": "tsc -p tsconfig-build.json --watch",
    "start": "node dist/index.js",
    "dev": "run-typescript-in-nodemon src/index.ts",
    "docker-build-local": "create-docker-context-for-node-component --build --push --tag auto --local",
    "docker-build-prod": "create-docker-context-for-node-component --build --push --tag auto",
    "retag-and-push": "retag-and-push",
    "test": "mocha --compilers ts:ts-node/register,tsx:ts-node/register --require tsconfig-paths/register \"src/test/**/*.spec.ts\""
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@magda/scripts": "^0.0.50-RC2",
    "@types/jsonpath": "^0.1.29",
    "@types/lodash": "^4.14.66",
    "@types/node": "^8.0.14",
    "@types/read-pkg-up": "^3.0.1",
    "@types/request": "^2.0.0",
    "@types/urijs": "^1.15.34",
    "@types/xml2js": "0.0.33",
    "@types/xmldom": "^0.1.29",
    "@types/yargs": "^6.6.0",
    "ts-loader": "^2.3.7",
    "typescript": "~2.5.0",
    "webpack": "^3.6.0"
  },
  "dependencies": {
    "@magda/registry-aspects": "^0.0.50-RC2",
    "@magda/typescript-common": "^0.0.50-RC2",
    "escape-html": "^1.0.3",
    "jsonpath": "^0.2.11",
    "read-pkg-up": "^3.0.0",
    "request": "^2.79.0",
    "string-similarity": "^1.2.1",
    "xlsx": "^0.14.0",
    "yargs": "^8.0.1"
  },
  "config": {
    "registryUrl": "http://localhost:6101/v0",
    "docker": {
      "name": "data61/magda-csv-connector",
      "include": "node_modules aspect-templates dist Dockerfile package.json"
    },
    "jwtSecret": "squirrel",
    "userId": "00000000-0000-4000-8000-000000000000"
  },
  "magda": {
    "language": "typescript",
    "categories": {
      "connector": true
    }
  }
}
